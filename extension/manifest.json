{
	"description": "The best way to browse imageboards!",
	"homepage_url": "https://dollchan.net/",
	"manifest_version": 2,
	"name": "Dollchan Extension Tools",
	"short_name": "Dollchan Ext",
	"version": "21.4.1.0",

	"applications": {
		"gecko": {
			"id": "dollchan_extension@dscript.me",
			"strict_min_version": "56.0"
		}
	},
	"background": {
		"scripts": ["background.js"]
	},
	"browser_action": {
		"browser_style": false,
		"default_icon": {
			"32": "icons/logo-32-light.png"
		},
		"default_title": "Dollchan Extension (enabled)",
		"default_popup": "menu/menu.html"
	},
	"icons": {
		"16": "icons/logo-16.png",
		"32": "icons/logo-32.png",
		"48": "icons/logo-48.png",
		"96": "icons/logo-96.png",
		"128": "icons/logo-128.png"
	},
	"permissions": [
		"<all_urls>",
		"notifications",
		"storage",
		"tabs",
		"unlimitedStorage",
		"webNavigation"
	]
}
